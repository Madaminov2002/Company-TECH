<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="100010" author="Jayxunbey">

        <dropColumn tableName="employee">
            <column name="name"/>
            <column name="passport"/>
            <column name="registration_date"/>
        </dropColumn>
        <addColumn tableName="employee">
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="100010-rename-to-username" author="Jayxunbey">
        <renameColumn tableName="employee" oldColumnName="user_name" newColumnName="username"/>
    </changeSet>

    <changeSet id="100010-adding-contract-id-foreign-key" author="jayxunbey">
        <addColumn tableName="employee">
            <column name="contract_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="employee" baseColumnNames="contract_id" referencedTableName="contract"
                                 referencedColumnNames="id" constraintName="employee_contract_id_fkey"/>

    </changeSet>

</databaseChangeLog>